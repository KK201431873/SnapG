# -*- mode: python ; coding: utf-8 -*-

from PyInstaller.utils.hooks import collect_submodules, collect_data_files
import multiprocessing
multiprocessing.set_start_method('spawn', True)

# Include all PySide6 modules automatically
hiddenimports = collect_submodules('PySide6')

# Include PySide6 plugins (platforms)
datas = collect_data_files('PySide6', subdir='plugins')

# Your app assets
datas += [
    ('src/assets', 'assets'),
    ('src/styles', 'styles'),
    ('src/__appdata__', '__appdata__')
]

a = Analysis(
    ['src\\main.py'],
    pathex=[],
    binaries=[
        (r'C:\Users\dell\AppData\Local\Programs\Python\Python313\python313.dll', '.')
    ],
    datas=datas,
    hiddenimports=hiddenimports,
    hookspath=[],
    runtime_hooks=[],
    excludes=[],
    noarchive=False
)

pyz = PYZ(a.pure, a.zipped_data, cipher=None)

exe = EXE(
    pyz,
    a.scripts,
    [],
    exclude_binaries=False,   # include everything in EXE
    name='SnapG',
    debug=False,
    bootloader_ignore_signals=False,
    strip=False,
    upx=True,
    console=False,            # GUI app
    icon='src\\assets\\favicon.ico'
)
